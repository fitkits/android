<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/news_item_lay"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
  android:orientation="vertical"
  android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <android.support.percent.PercentFrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
        <RelativeLayout
          app:layout_aspectRatio="375%"
          app:layout_widthPercent="100%">
    <ImageView
      android:id="@+id/coverImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/fitkit_dummy_bg"
      android:scaleType="centerCrop"/>
        </RelativeLayout>
    </android.support.percent.PercentFrameLayout>
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
      android:layout_marginRight="5dp"
      android:layout_marginLeft="5dp"
      android:layout_marginBottom="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardElevation="4dp"
      app:cardCornerRadius="3dp">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:weightSum="1"
          android:orientation="horizontal">
            <LinearLayout
              android:layout_weight="0.3"
              android:layout_margin="10dp"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
                <TextView
                  android:id="@+id/title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="#000000"
                  android:letterSpacing="0.01"
                  android:text="Introducing FITKITS’ Fitcamp"
                  />
                <TextView
                  android:id="@+id/desc"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="9sp"
                  android:maxLines="3"
                  android:textColor="@color/black58"
                  android:letterSpacing="0.02"
                  android:text="Two batches, morning and evening from 6 to 7:15 from the 23rd of November to 3rd of December…"/>
            </LinearLayout>

            <RelativeLayout
              android:layout_weight="0.7"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

                <ImageView
                  android:layout_width="8dp"
                  android:layout_height="14dp"
                  android:layout_marginRight="10dp"
                  android:scaleType="fitXY"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:src="@drawable/ic_arrow_right_black"/>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
          android:layout_width="match_parent"
          android:background="@color/red"
          android:elevation="5dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          android:layout_height="3dp"></LinearLayout>
    </RelativeLayout>
</LinearLayout>