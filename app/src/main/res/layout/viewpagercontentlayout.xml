<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
    <TextView
        android:id="@+id/last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="top"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:text="Last Updated: 28th Dec 2018"/>
        <LinearLayout
            android:id="@+id/balance_flexibility"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/flexibility_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Flexibility"/>
                <TextView
                    android:id="@+id/flexibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                   android:textStyle="bold"
                    android:text="234"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/balance_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Balance"/>
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="424"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3">
            android:id="@+id/balance_flexibility"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/strength_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Strength"/>
                <TextView
                    android:id="@+id/strength"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="867"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/endurance_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Muscle"/>
                <TextView
                    android:id="@+id/endurance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="234"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
           >

            <android.support.v7.widget.CardView
                android:id="@+id/cardio_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Cardio"/>
                <TextView
                    android:id="@+id/cardio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="451"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/posture_card"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:gravity="top"
                    android:layout_margin="10dp"
                    android:text="Posture"/>
                <TextView
                    android:id="@+id/posture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="28dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="432"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
