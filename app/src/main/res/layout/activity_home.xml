<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



  <android.support.v7.widget.Toolbar
    android:layout_alignParentTop="true"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/white"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    <TextView
      android:id="@+id/toolbar_day"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:layout_marginRight="5dp"
      android:textColor="#000000"
      android:text="Today"
      />
    <TextView
      android:layout_gravity="center"
      android:id="@+id/toolbar_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textColor="#000000"
      />
    <ImageView
      android:id="@+id/toolbar_dropdown"
      android:layout_width="7dp"
      android:layout_height="12dp"
      android:src="@drawable/arrow_down"/>
    <TextView
      android:id="@+id/toolbar_date"
      android:layout_gravity="center"
      android:layout_marginRight="15dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textColor="#000000"
      />
    <ImageButton
        android:id="@+id/chat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:layout_gravity="right"
        android:background="@color/caldroid_transparent"
        app:srcCompat="@drawable/ic_chat" />
  </android.support.v7.widget.Toolbar>



  <FrameLayout
  android:id="@+id/container"
  android:layout_below="@id/appbar"
  android:layout_above="@id/button_lay"
  android:layout_width="match_parent"
  android:layout_height="match_parent"></FrameLayout>

      <LinearLayout
        android:visibility="visible"
        android:id="@+id/button_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="49dp"
          android:orientation="horizontal"
          android:weightSum="4"
          android:background="@android:color/white">
          <LinearLayout
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:scaleType="centerInside"
              android:src="@drawable/speedometer"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:textColor="@color/black"
              android:letterSpacing="0.01"
              android:gravity="center_horizontal"
              android:text="Home"
              />
          </LinearLayout>
          <LinearLayout
            android:id="@+id/fitkit_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_news"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:textColor="@color/black"
              android:letterSpacing="0.01"
              android:gravity="center_horizontal"
              android:text="Fitkits News"
              />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_attendance"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:textColor="@color/black"
              android:letterSpacing="0.01"
              android:gravity="center_horizontal"
              android:text="Attendance"
              />
          </LinearLayout>
          <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:scaleType="centerInside"
              android:src="@drawable/ic_profile"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:textColor="@color/black"
              android:letterSpacing="0.01"
              android:gravity="center_horizontal"
              android:text="Profile"
              />

          </LinearLayout>
        </LinearLayout>
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="2dp"
          android:weightSum="4"
          android:background="@color/white">
          <LinearLayout
            android:id="@+id/home_select"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/red"></LinearLayout>
          <LinearLayout
            android:id="@+id/news_select"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:background="@color/red"></LinearLayout>

          <LinearLayout
            android:id="@+id/att_select"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:background="@color/red"></LinearLayout>
          <LinearLayout
            android:id="@+id/profile_select"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            android:layout_marginRight="15dp"
            android:background="@color/red"></LinearLayout>
        </LinearLayout>
      </LinearLayout>
  <android.support.design.widget.BottomNavigationView
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="56dp"

    app:itemIconTint="@drawable/bottom_nav"
    app:itemTextColor="@drawable/bottom_nav"
    android:layout_alignParentBottom="true"
    android:layout_gravity="start"
    app:menu="@menu/my_navigation_menu" />

</RelativeLayout>

