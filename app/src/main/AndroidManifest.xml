        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_live_k8BDqVb0qB2C5K" />

        <activity
            android:name=".Subscriptions.SubscriptionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
