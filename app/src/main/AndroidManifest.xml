            android:theme="@style/SubTheme" />
        <activity
            android:name=".Home.Activities.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SubTheme" />
        <activity
            android:name=".Goals.Activities.GoalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SubTheme" />
        <activity
            android:name=".Misc.Activities.MyDetailActivity"
            android:label="@string/app_name"
